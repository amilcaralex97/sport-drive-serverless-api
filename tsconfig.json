{
    "compilerOptions": {
        "outDir": "./bin",
        "rootDir": "./src",
        "lib": [
            "esnext"
        ],
        "target": "es6",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}